extends layout

block content
  h1=article.model
  h2 #{article.cost} $
  p= article.details
  hr
  if user
    if user.role == 'admin'
      a.btn.btn-warning.mr-3(href="/articles/edit/"+article._id) Edit
      a.btn.btn-danger.delete-article.mr-3(href='#', data-id=article._id) Delete
    else 
      a.btn.btn-primary.mr-3(href="/articles/buy/"+article._id) Buy
